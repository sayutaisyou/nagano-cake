<h1>注文履歴一覧</h1>
<table>
    <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
    </thead>
    <tbody>
        <% @orders.each do |order| %>
            <tr>
                <td>%= order.created_at %></td>
                <td><%= order.postal_code %><br>
                    <%= order.address %><br>
                    <%= order.name %>
                </td>
                <% @order_details.each do |order_detail| %>
                    <td><%= order_detail.items.name %></td>
                <% end %>
                <td><%= order.total_payment %></td>
                <td><%= order.status %></td>
                <td><%= link_to "表示する", customers_order_path(order), class: "btn-sm btn-primary" %></td>
            </tr>
        <% end %>
    </tbody>
</table>
