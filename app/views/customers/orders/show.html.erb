<div class="row">
    <div class="col-xs-10 col-xs-offset-1 title">
        <h1>注文履歴詳細</h1>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <b>注文情報</b>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td class="table-active">注文日</td>
                        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
                    </tr>
                    <tr>
                        <td class="table-active align-middle">配送先</td>
                        <td class="align-middle">
                            <%= @order.postal_code %>
                            <%= @order.address %>
                            <%= @order.name %>
                        </td>
                    </tr>
                    <tr>
                        <td class="table-active">支払方法</td>
                        <td><%= @order.payment_method %></td>
                    </tr>
                    <tr>
                        <td class="table-active">注文ステータス</td>
                        <td><%= @order.status %></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-xs-5 input-left-30">
            <b>請求情報</b>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td class="table-active">商品合計</td>
                        <td><%= (@order.total_payment.round - @order.shipping_cost).to_s(:delimited) %></td>
                    </tr>
                    <tr>
                        <td class="table-active">配送料</td>
                        <td><%= @order.shipping_cost.to_s(:delimited) %></td>
                    </tr>
                    <tr>
                        <td class="table-active"><b>ご請求額</b></td>
                        <td><%= @order.total_payment.round.to_s(:delimited) %></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-xs-12", style="width:60%">
            <b>注文内容</b>
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered", style="width:60%">
            <thead>
                <tr class="table-active">
                    <th>商品</th>
                    <th>単価（税込）</th>
                    <th>個数</th>
                    <th>小計</th>
                </tr>
            </thead>
            <tbody>
                <% @order_details.each do |order_detail| %>
                    <tr>
                        <td><%= order_detail.item.name %></td>
                        <td><%= order_detail.price.to_s(:delimited) %></td>
                        <td><%= order_detail.amount %></td>
                        <td><%= (order_detail.price.round * order_detail.amount).to_s(:delimited) %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>