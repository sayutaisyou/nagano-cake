<h1>注文情報入力</h1>
<div>
    <b>支払方法</b>
    <%= form_with url: customers_orders_confirm_path, local: true do |f| %>
        <%= f.radio_button :payment_method, :クレジットカード %>
        <%= f.label :クレジットカード %>
        <%= f.radio_button :payment_method, :銀行振込 %>
        <%= f.label :銀行振込 %>
        
    <b>お届け先</b>
        <!--ご自身の住所-->
        <%= f.radio_button :address, :0 %>
        <%= f.label :ご自身の住所 %>
        <%= current_customer.customers.postal_code %>
        <%= current_customer.customers.address %>
        <%= current_customer.customers.last_name %>
        <%= current_customer.customers.first_name %>
        <!--登録済み住所から選択-->
        <%= f.radio_button :address, :1 %>
        <%= f.label :登録済み住所から選択 %>
        <!--< %= f.collection_select :current_user.addresses.address_id, Address.all, :id, :name, include_blank: "選択して下さい" %>-->
        <%= f.collection_select :current_customer.address_id, Address.all, :id, :name, :postal_code, :address, include_blank: "選択して下さい" %>
        <!--新しいお届け先-->
        <%= f.radio_button :address, :2 %>
        <%= f.label :新しいお届け先 %>
        <%= f.text_field :postal_code %>
        <%= f.label :郵便番号 %>
        <%= f.text_field :address %>
        <%= f.label :住所 %>
        <%= f.text_field :name %>
        <%= f.label :宛名 %>
        
        <%= f.submit %>
    <% end %>
</div>