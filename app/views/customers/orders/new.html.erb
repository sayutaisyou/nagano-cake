<h1>注文情報入力</h1>
<div>
    <b>支払方法</b>
    <%= form_with model: @order, local: true do |f| %>
        <%= f.radio_button :payment_method, :クレジットカード %>
        <%= f.label :クレジットカード %>
        <%= f.radio_button :payment_method, :銀行振込 %>
        <%= f.label :銀行振込 %>
    <% end %>
</div>
<div>
    <b>お届け先</b>
    <%= form_with model: @address, local: true do |f| %>
        <!--ご自身の住所-->
        <%= f.radio_button :address, :0 %>
        <%= f.label :ご自身の住所 %>
        <%= current_user.customers.postal_code %>
        <%= current_user.customers.address %>
        <%= current_user.customers.last_name %>
        <%= current_user.customers.first_name %>
        <!--登録済み住所から選択-->
        <%= f.radio_button :address, :1 %>
        <%= f.label :登録済み住所から選択 %>
        <!--新しいお届け先-->
        <%= f.radio_button :address, :2 %>
        <%= f.label :新しいお届け先 %>
        
        
        
        <%= f.submit %>
         <!--redirect_to customers_orders_confirm_path-->
    <% end %>
    
</div>