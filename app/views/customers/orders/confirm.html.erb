<h1>注文情報確認</h1>
<table>
    <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
    </thead>
    <tbody>
        <% @cart_items.each do |cart_item| %>
            <tr>
                <td>
                    <%= attachment_image_tag(cart_item.item, :image, :fill, 80, 50, fallback: "no-image-mini.jpg") %>
                    <%= cart_item.item.name %>
                </td>
                <td><%= cart_item.item.price %></td>
                <td><%= cart_item.amount %></td>
                <td><%= cart_item.item.price * cart_item.amount %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= form_with model: @order, url: customers_orders_path, local: true do |f| %>
    <table>
        <tbody>
            <tr>
                <td>送料</td>
                <td>
                    <%= @order.shipping_cost %>
                    <%= f.hidden_field :shipping_cost, :value => @order.shipping_cost %>
                </td>
                <td>商品合計</td>
                <td><%= @sum.round %>
                </td>
                <td>請求金額</td>
                <td><%= @order.total_payment %>
                    <%= f.hidden_field :total_payment, :value => @order.total_payment %>
                </td>
            </tr>
        </tbody>
    </table>
    <div>
        <b>支払方法</b>
        <%= @order.payment_method %>
        <%= f.hidden_field :payment_method, :value => @order.payment_method %>
        <b>お届け先</b>
        <%= @order.postal_code %>
        <%= f.hidden_field :postal_code, :value => @order.postal_code %>
        <%= @order.address %>
        <%= f.hidden_field :address, :value => @order.address %>
        <%= @order.name %>
        <%= f.hidden_field :name, :value => @order.name %>
    </div>
    <%= f.submit "購入を確定する" %>
<% end %>