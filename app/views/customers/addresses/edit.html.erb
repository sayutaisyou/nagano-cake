<div class="row">
    <div class="col-lg-10 col-xs-offset-1 title">
        <span class="bg-origin">配送先編集</h1>
    </div>
</div>
<div class="container">
    <div class="row address-table">
        <%= form_with model: @address, url: customers_address_path, local: true do |f| %>
            <table>
                <tr>
                    <td>郵便番号（ハイフンなし）</td>
                    <td><%= f.text_field :postal_code %></td>
                    <td></td>
                </tr>
                <tr>
                    <td>住所</td>
                    <td><%= f.text_field :address %></td>
                    <td></td>
                </tr>
                <tr>
                    <td>宛名</td>
                    <td><%= f.text_field :name %></td>
                    <td><%= f.submit "編集する", class: "btn-sm btn-primary ml-2" %></td>
                </tr>
            </table>
        <% end %>
    </div>
</div>