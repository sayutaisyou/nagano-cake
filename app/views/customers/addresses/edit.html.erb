<div class="row">
    <div class="col-lg-10 col-xs-offset-1 title">
        <span class="bg-origin">配送先編集</h1>
    </div>
</div>

<%= form_with model: @address, url: customers_address_path, local: true do |f| %>
    <div class="row">
        <div class="col-lg-2 input-left-40">
            <%= f.label :address, "郵便番号（ハイフンなし）" %>
        </div>
        <div class="col-lg-4 input-left-40">
            <%= f.text_field :postal_code %>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2 input-left-40">
            <%= f.label :address, "住所" %>
        </div>
        <div class="col-lg-8 input-left-40">
            <%= f.text_field :address, :size => "80" %>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2 input-left-40">
            <%= f.label :address, "宛名" %>
        </div>
        <div class="col-lg-2 input-left-40">
            <%= f.text_field :name %>
        </div>
        <div class="col-lg-2 input-left-40">
            <%= f.submit "編集する", class: "btn-sm btn-primary ml-2" %>
        </div>
    </div>
<% end %>