<div class="container">
    <div class="row">
        <div class="col-xs-8 title">
            <h1>ショッピングカート</h1>
        </div>
    <!--カートに商品がある時の表示画面-->
    <% if @cart_items.count > 0 %>
    
        <div class="col-xs-4">
            <%= link_to customers_cart_items_destroy_all_path, method: :delete do %>
                <button type="button" class="btn btn-danger", data: {confirm: "本当に全て削除しますか？">カートを空にする</button>
            <% end %>
        </div>
    </div>
    
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-bordered table-sm">
                    <thead>
                        <tr class="table-active">
                            <th>商品名</th>
                            <th>単価（税込）</th>
                            <th>数量</th>
                            <th>小計</th>
                            <th colspan="1"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @sum = 0 %>
                        <% @cart_items.each do |cart_item| %>
                            <tr>
                                <td class="align-middle">
                                    <%= attachment_image_tag(cart_item.item, :image, :fill, 80, 50, fallback: "no-image-mini.jpg") %>
                                    <%= cart_item.item.name %>
                                </td>
                                <td class="align-middle"><%= cart_item.item.price %></td>
                                <td class="align-middle">
                                    <!--入力フォーム-->
                                    <%= form_with model: cart_item, url: customers_cart_item_path(cart_item.id), local: true do |f| %>
                                        <%= f.number_field :amount %>
                                        <%= f.submit "変更", class: "btn-sm btn-primary" %>
                                    <% end %>
                                </td>
                                <td class="align-middle">
                                    <% @each_sum = cart_item.item.price * 1.1 * cart_item.amount %>
                                    <%= (cart_item.item.price * cart_item.amount).to_s(:delimited) %>
                                    <% @sum += @each_sum %>
                                </td>
                                <td class="align-middle text-center">
                                    <%= link_to customers_cart_item_path(cart_item.id), method: :delete do %>
            			                <button type="button" class="btn btn-danger", data: {confirm: "本当に削除しますか？"}>削除する</button>
            			            <% end %>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    
        <div class="row">
            <div class="col-sm-8">
                <%= link_to root_path do %>
                    <button type="button" class="btn btn-primary">買い物を続ける</button>
                <% end %>
            </div>
            <div class="col-sm-4">
                <table class="table table-bordered">
                    <tr>
                        <td class="table-active">合計金額</td>
                        <td><%= @sum.round %></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    
        <div class="row justify-content-center">
            <%= link_to new_customers_order_path do %>
                <button type="button" class="btn btn-success btn-lg text-center">情報入力に進む</button>
            <% end %>
        </div>
    
    <!--カートが空の時の表示画面-->
    <% else %>
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1 title">
                <p>カートに商品がありません</p>
            </div>
        </div>
        <div class="row">
            <%= link_to root_path do %>
                <button type="button" class="btn btn-primary">買い物を続ける</button>
            <% end %>
        </div>
    </div>
    <% end %>
