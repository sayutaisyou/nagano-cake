 <div class="row">
  <div class="col-lg-10 offset-lg-1">
    <div class="row">
      <div class="col-lg-5 text-center mb-3">
        <h4><span class="bg-origin pl-4 pr-4">新規会員登録</span></h4>
      </div>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
      <div class="row field mb-2">

        <%= f.label :名前, class: "col-lg-2" %>
        <%= f.label :"(姓)", class: "col-lg-1" %>
        <%= f.text_field :last_name, :placeholder => "佐藤", autofocus: true, autocomplete: "last_name", class: "col-lg-3"%>
        <%= f.label :"(名)", class: "col-lg-1" %>
        <%= f.text_field :first_name, :placeholder => "太郎", autofocus: true, autocomplete: "first_name", class: "col-lg-3" %>

      </div>

      <div class="row field mb-2">

          <%= f.label :フリガナ, class: "col-lg-2" %>
          <%= f.label :"(セイ)", class: "col-lg-1" %>
          <%= f.text_field :last_name_kana, :placeholder => "サトウ", autofocus: true, autocomplete: "last_name_kana", class: "col-lg-3" %>
          <%= f.label :"(メイ)", class: "col-lg-1" %>
          <%= f.text_field :first_name_kana, :placeholder => "タロウ", autofocus: true, autocomplete: "first_name_kana", class: "col-lg-3" %>

      </div>

      <div class="row field mb-2">

          <%= f.label :メールアドレス, class: "col-lg-2" %>
          <div class="col-lg-1"></div>
          <%= f.email_field :email, :placeholder => "test@test.com", autofocus: true, autocomplete: "email", class: "col-lg-3" %>

      </div>

      <div class="row field mb-2">

          <%= f.label :"郵便番号(ハイフンなし)", class: "col-lg-3" %>
          <%= f.text_field :postal_code, :placeholder => "0000000", autofocus: true, autocomplete: "postal_code", class: "col-lg-3" %>

      </div>

      <div class="row field mb-2">

          <%= f.label :住所, class: "col-lg-2" %>
          <div class="col-lg-1"></div>
          <%= f.text_field :address, :placeholder => "東京都新宿区３丁目8-1", autofocus: true, autocomplete: "address", class: "col-lg-7" %>

      </div>

      <div class="row field mb-2">

          <%= f.label :"電話番号(ハイフンなし)", class: "col-lg-3" %>
          <%= f.text_field :telephone_number, :placeholder => "09033003300", autofocus: true, autocomplete: "telephone_number", class: "col-lg-3" %>

      </div>

      <div class="row field mb-2">

          <%= f.label :"パスワード(８文字以上)", class: "col-lg-3" %>
          <%= f.password_field :password, :placeholder => "pass1234", autocomplete: "new-password", class: "col-lg-3" %>

      </div>

      <div class="row field mb-2">

          <%= f.label :"パスワード(確認用)", class: "col-lg-3" %>
          <%= f.password_field :password_confirmation, :placeholder => "pass1234", autocomplete: "new-password", class: "col-lg-3" %>

      </div>

      <div class="row mb-2">
        <div class="actions margen">
          <%= f.submit "新規登録", class: "btn btn-success pl-5 pr-5" %>
        </div>
      </div>
    <% end %>

    <div class="row mb-2">
      <div class="col-lg-5 text-center">
        <h4><span class="bg-origin pl-4 pr-4">既に登録済みの方</span></h4>
      </div>
    </div>

    <div class="row mb-2 mt-3">
      <div class="col-lg-1"></div>
      <div class="col-lg-11 ">
         <span class="kasen mr-3"><%= link_to "こちら", new_customer_session_path %></span>からログインしてください。
      </div>
    </div>
  </div>
</div>





