<div class="row">
  <div class="col-lg-10 offset-lg-1">
    <div class="row">
      <div class="col-lg-5 text-center mb-3">
        <h4><span class="bg-origin pl-4 pr-4">登録情報編集</span></h4>
      </div>
    </div>

     <%= form_with url: customers_customer_path, model: @customer, local:true do |f| %>

    <!--エラーメッセージの部分テンプレート化-->
      <% if @customer.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(@customer.errors.count, "error") %> prohibited this obj from being saved:</h3>
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row field mb-2">
        <%= f.label :名前, class: "col-lg-2" %>
        <%= f.label :"(姓)", class: "col-lg-1 text-right" %>
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "col-lg-3" %>
        <%= f.label :"(名)", class: "col-lg-1 text-right" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "col-lg-3" %>
      </div>

      <div class="row field mb-2">
        <%= f.label :フリガナ, class: "col-lg-2" %>
        <%= f.label :"(セイ)", class: "col-lg-1 text-right" %>
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "col-lg-3" %>
        <%= f.label :"(メイ)", class: "col-lg-1 text-right" %>
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "col-lg-3" %>
      </div>

      <div class="row field mb-2">
        <%= f.label :メールアドレス, class: "col-lg-2" %>
        <div class="col-lg-1"></div>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-3" %>
      </div>

      <div class="row field mb-2">
        <%= f.label :"郵便番号(ハイフンなし)", class: "col-lg-3" %>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "col-lg-3" %>
      </div>

      <div class="row field mb-2">
        <%= f.label :住所, class: "col-lg-2" %>
        <div class="col-lg-1"></div>
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "col-lg-7" %>
      </div>

      <div class="row field mb-2">
        <%= f.label :"電話番号(ハイフンなし)", class: "col-lg-3" %>
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "col-lg-3" %>
      </div>


      <div class="row mb-2 mt-3">
        <div class="col-lg-12 moji">
          <%= f.submit "編集内容を保存する", class: "btn btn-success" %>
          <%= link_to "退会する", customers_customers_unsubscribe_path, class: "btn btn-danger ml-3" %>
        </div>
      </div>

    <% end %>
  </div>
</div>





