<div class="row">

  <label>登録情報編集</label>

  <%= form_with url: customers_customer_path, model: @customer, local:true do |f| %>

  <!--エラーメッセージの部分テンプレート化-->
    <% if @customer.errors.any? %>
      <div id="error_explanation">
        <h3><%= pluralize(@customer.errors.count, "error") %> prohibited this obj from being saved:</h3>
        <ul>
          <% @customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :名前 %>
      <%= f.label :"(姓)" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      <%= f.label :"(名)" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>

    <div class="field">
      <%= f.label :フリガナ %>
      <%= f.label :"(セイ)" %>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      <%= f.label :"(メイ)" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :"郵便番号(ハイフンなし)" %>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>

    <div class="field">
      <%= f.label :住所 %>
      <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>

    <div class="field">
      <%= f.label :"電話番号(ハイフンなし)" %>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
    </div>

    <div class="actions">
      <%= f.submit "編集内容を保存する" %>
    </div>

    <div>
      <%= link_to "退会する", customers_customers_unsubscribe_path %>
    </div>

  <% end %>
</div>



