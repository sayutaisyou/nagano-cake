  </head>

  <body>
    <header class="header">
      <% if request.fullpath.include?("admin") %>
        <%= render 'layouts/admins_header' %>
      <% else%>
        <%= render 'layouts/customers_header' %>
      <% end %>
    </header>
    
    <main class="main">
      <div class ="container-fluid">
        <%= yield %>
      </div>
    </main>

    <footer class="footer">
      <div class ="container-fluid">
        <p class="text-lg-right mt-5 mr-5">Â© nagano-cake</p>
      </div>
    </footer>
  </body>

</html>
