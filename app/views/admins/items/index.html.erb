<div class="container">
  <div class="row">
      <div class="mb-2 offset-md-1">
         <p class="admins-items-title">商品一覧</p>
      </div>
  </div>
  
  <div class="col-12">
      <%= link_to new_admins_item_path do %>
          <button type="button" class="btn btn-light rounded-circle p-0 float-right mb-2" style="width:3rem;height:3rem;">
            +
          </button>
      <% end %>
        
      <div class="mx-auto">  
        <table class="table items-index-table">
            <thead class="thead-light">
                <tr>
                    <th>商品ID</th>
                    <th>商品名</th>
                    <th>税抜価格</th>
                    <th>ジャンル</th>
                    <th>ステータス</th>
                </tr>
            </thead>
            <tbody>
                <% @items.each do |item| %>
                <tr>
                    <td><%= item.id %></td>
                    <td><%= link_to item.name, admins_item_path(item) %></td>
                    <td><%= item.price %></td>
                    <td><%= item.genre.name %></td>
                    <td><%= item.is_active %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
      </div>
      <div class="offset-md-5">    
        <%= paginate @items, class: "" %>
      </div>
   </div>
</div>