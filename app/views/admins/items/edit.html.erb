<h3>商品編集</h3>

<%= form_with model: @item, url: admins_item_path, local: true do |f| %>
    
    <% if @item.errors.any? %>
		<div id="error_explanation">
			<h3><%= @item.errors.count %>error prohibited this obj from being saved:</h3>
			<ul>
				<% @item.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

    <div class="">
        <%= f.label :商品画像 %>
        <%= f.attachment_field :image, size: '100x100', fallback: 'no_image_square.jpg', size: '100x100' %>
    </div>
    <div class="">
        <%= f.label :商品名 %>
        <%= f.text_field :name %>
    </div>
    <div class="">
        <%= f.label :商品説明 %>
        <%= f.text_area :introduction %>
    </div>
    <div class="">
        <%= f.label :ジャンル %>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %>
    </div>
    <div class="">
        <%= f.label :税抜き価格 %>
        <%= f.text_field :price %>
        <span>円</span>
    </div>
    <div class="">
        <%= f.label :販売ステータス %>
        <%= f.select :is_active, [["販売中", "販売中"], ["売切れ","売切れ"]], include_blank: "--選択して下さい--" %>
    </div>
    <div class="">
        <%= f.submit :変更を保存 %>
    </div>
<% end %>