<div class="container">
  <div class="row">
      <div class="mb-2 offset-md-1">
         <h3 class="admins-items-title">商品詳細</h3>
      </div>
  </div>


    <div class="items-form-area">
        <div class="image-area">
            <div class="">
              <%= attachment_image_tag @item, :image, size: '100x100', fallback: 'no_image_square.jpg', size: '200x200' %>
            </div>
        </div>

        <div class="text-area">
            <table>
                <tr>
                    <th class="">商品名</th>
                    <td><%= @item.name %></td>
                </tr>

                <tr>
                    <th class="">商品説明</th>
                    <td><%= @item.introduction %></td>
                </tr>

                <tr>
                    <th class="">ジャンル</th>
                    <td><%= @item.genre.name %></td>
                </tr>

                <tr>
                    <th class="">税込価格（税抜き価格）</th>
                    <td><%= @item_including_tax.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
                </tr>

                <tr>
                    <th class="">販売ステータス</th>
                    <td><%= @item.is_active %></td>
                </tr>
            </table>
        </div>
    </div>

    <div class="text-area-btn">
        <%= link_to "編集する", edit_admins_item_path, class: "btn btn-primary text-white" %>
    </div>

</div>