<p><%= @customer.last_name + @customer.first_name %>さんの会員情報</p>

<table>

  <tr>
    <th>顧客ID</th>
    <td><%= @customer.id %></td>
    <td>
      <% if @customer.is_deleted == false %>
        有効会員
      <% else %>
        退会済
      <% end %>
    </td>
  </tr>

  <tr>
    <th>氏名</th><td><%= @customer.last_name %></td><td><%= @customer.first_name %></td>
  </tr>

  <tr>
    <th>フリガナ</th><td><%= @customer.last_name_kana %></td><td><%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th><td><%= @customer.postal_code %></td>
  </tr>

  <tr>
    <th>住所</th><td><%= @customer.address %></td>
  </tr>

  <tr>
    <th>電話番号</th><td><%= @customer.telephone_number %><td>
  </tr>

  <tr>
    <th>メールアドレス</th><td><%= @customer.email %></td>
  </tr>

  <tr>
    <td><%= link_to '編集する', edit_admins_customer_path(@customer) %></td><td><%= link_to '注文履歴一覧を見る', admins_orders_path(id: @customer.id, order_sort: 1) %></td>
  </tr>

</table>