<p><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</p>

<table>

  <tr>
    <th>会員ID</th><td><%= @customer.id %></td>
  </tr>
<%= form_with model:@customer, local:true do |f| %>
  <tr>
    <th><%= f.label :氏名 %></th><td><%= f.text_field :last_name %></td><td><%= f.text_field :first_name %></td>
  </tr>

  <tr>
    <th><%= f.label :フリガナ %></th><td><%= f.text_field :last_name_kana %></td><td><%= f.text_field :first_name_kana %></td>
  </tr>
  <tr>
    <th><%= f.label :郵便番号 %></th><td><%= f.text_field :postal_code %></td>
  </tr>

  <tr>
    <th><%= f.label :住所 %></th><td><%= f.text_field :address %></td>
  </tr>

  <tr>
    <th><%= f.label :電話番号 %></th><td><%= f.text_field :telephone_number %><td>
  </tr>

  <tr>
    <th><%= f.label :メールアドレス %></th><td><%= f.text_field :email %></td>
  </tr>

  <tr>
    <th>会員ステータス</th>
    <td>
      <%= f.radio_button :is_deleted, :false %>
      <%= f.label :is_deleted, "有効" %>
      <%= f.radio_button :is_deleted, :true %>
      <%= f.label :is_deleted, "退会済" %>
    </td>
  </tr>
  
  <tr>
    <td><%= f.submit '変更を保存する' %></td>
  </tr>
<% end %>  
</table>