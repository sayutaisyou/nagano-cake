<h1>会員一覧</h1>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admins_customer_path(customer) do %> <!--会員詳細ページへ-->
            <%= customer.last_name + customer.first_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_deleted == false %> <!--defaultはfalse-->
            有効
          <% else %>
            退会済
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>