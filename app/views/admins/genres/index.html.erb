<h1>ジャンル一覧・追加</h1>

<%= form_with model: @genre do |f| %>
  

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th>状態</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% books.each do |book| %>
      <tr>
        <td>ジャンル名</td>
        <td><%= book.body %></td>
        <td>有効か無効か</td>
        <td>編集ボタン</td>
      </tr>
    <% end %>
  </tbody>
</table>