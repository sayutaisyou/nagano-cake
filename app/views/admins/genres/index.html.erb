<div class="row">
  <div class="ml-5">
    <h3 class="genre-page-title">ジャンル一覧・追加</h3>
  </div>
</div>
</div>

<div class="genre-form-group ml-5">
  <%= form_with model: @genre, url: admins_genres_path, local:true do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <%= f.label :ジャンル %>
    <%= f.text_field :name %>
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "有効" %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "無効" %>
    <%= f.submit "追加" ,class: 'btn btn-primary ml-3' %>
  <% end %>
</div>
<div class="genre-table-group ml-5">
<table class='table table-hover table-inverse'>
  <thead class="thead-light">
    <tr>
      <th>ジャンル</th>
      <th>状態</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <% if genre.is_active == true %>
            有効
          <% else %>
            無効
          <% end %>
        </td>
        <td>
          <%= link_to '編集する', edit_admins_genre_path(genre.id), class: 'btn btn-primary text-white' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>