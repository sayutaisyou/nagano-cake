<div class="row">
  <div class="ml-5">
    <h3 class="order-page-title">注文履歴一覧</h3>
  </div>
</div>

<div class="row">
  <div class="order-index-table mx-auto">
    <table class='table table-hover table-inverse'>
      <thead class="thead-light">
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
  
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admins_order_path(order) do %> <!--注文履歴詳細ページへ-->
                <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
              <% end %>
            </td>
            <td><%= order.customer.last_name + order.customer.first_name %></td>
            <td><%= order.order_details.count %></td>
            <td><%= order.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  <div class="row">
    <div class="col-lg-2 offset-lg-5 ">
      <p><%= paginate @orders %></p>
    </div>
  </div>
    
  </div>
</div>