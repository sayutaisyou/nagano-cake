<h1>注文履歴詳細</h1>

<table>
  <tbody>
    <tr>
      <th>購入者</th>
      <td>
        <%= link_to admins_customer_path(@order) do %>
        <%= @order.customer.last_name + @order.customer.first_name %>
        <% end %>
      </td>
    </tr>

    <tr>
      <th>配送先</th>
      <td><%= @order.postal_code %><%= @order.address %></td>
      <td><%= @order.name %></td>
    </tr>

    <tr>
      <th>支払い方法</th>
      <td><%= @order.payment_method %></td>
    </tr>

    <tr>
      <th>注文ステータス</th>
      <td>
        <%= form_with model: @order, url: admins_order_path(@order), local: true do |f| %>
          <%= f.select :status, [["入金待ち", "入金待ち" ], ["入金確認", "入金確認" ], ["製作中", "製作中" ], ["発送準備中", "発送準備中" ], ["発送済み", "発送済み" ]] %>
          <%= f.submit "更新" %>
        <% end %>
      </td>
    </tr>

  </tbody>
</table>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @sum = 0 %>
    <% @order_details.each do |order_detail| %>
      <tr>
       <td><%= order_detail.item.name %></td>
       <td><%= (order_detail.item.price * 1.1).floor %></td>
       <td><%= order_detail.amount %></td>
       <td><%= (order_detail.item.price * order_detail.amount * 1.1).floor %></td><!--単価　＊　個数　＊　税率-->
       <% @sum += (order_detail.item.price * order_detail.amount * 1.1).floor %>
       <td><!-- order_id: @order.id-->
         <%= form_with model: order_detail, url: admins_order_detail_path(order_detail), method: :patch, local: true do |f| %>
         <%= f.select :making_status, [["製作不可", "製作不可"], ["製作待ち", "製作待ち"], ["製作中", "製作中"], ["製作完了", "製作完了"]] %>
         <%= f.submit "更新" %>
         <% end %>
       </td>

      </tr>
    <% end %>
  </tbody>
</table>
<table>
  <tbody>
    <tr>
      <th>商品合計</th><td><%= @sum %></td><!--each文の中で足したもの-->
    </tr>
    <tr>
      <th>送料</th><td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
      <th>請求合計金額</th><td><%= @sum + @order.shipping_cost %></td>
    </tr>
  </tbody>
</table>